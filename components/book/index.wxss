/* components/book/index.wxss */
.book-container{
  display: flex;
  margin-top: 30rpx;
  position: relative;
  flex-direction: column;
  width: 240rpx;
  height: 360rpx;
  box-shadow: 2px 2px 3px #e3e3e3
}
.book-container image{
  width: 100%;
  height: 100%;
  border-radius: 2px;
}
.desc{
  display: flex;
  flex-direction: column;
  width: 100%;
  position:absolute;
  bottom:0;
  font-size: 24rpx;
  padding: 5rpx 10rpx 8rpx 15rpx;
  border-bottom-left-radius: 2px;
  border-bottom-right-radius: 2px;
  background-color:#ffffff;
}
.title{
  margin-top: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.author{
  font-size: 20rpx;
  margin-bottom: 10rpx;
  /* margin-top:-5rpx; */
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #999999
}

.foot{
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: end;
}
.footer{
  color: #666666;
}